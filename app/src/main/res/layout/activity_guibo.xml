<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <include layout="@layout/toolbar_message_guibo"
        android:id="@+id/toolbar_message_activity_guibo"/>

<ScrollView
    android:id="@+id/chatScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:layout_below="@+id/toolbar_message_activity_guibo"
    android:layout_above="@id/inputLayout">

    <LinearLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


</ScrollView>
    <RelativeLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cream"
        android:gravity="bottom"
        android:paddingBottom="9dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp">

        <!--<ai.api.ui.AIButton-->
        <!--android:id="@+id/micButton"-->
        <!--style="@style/ApiAi.Microphone"-->
        <!--android:layout_height="152dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:visibility="visible" />-->

        <ImageView
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_send" />

        <EditText
            android:id="@+id/queryEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@drawable/et_search_bg"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/darkBluePhone"
            android:hint="Escribe un mensaje..."
            android:lines="1"
            android:maxLength="100"
            android:layout_toLeftOf="@id/sendBtn"
            />

    </RelativeLayout>
</RelativeLayout>
