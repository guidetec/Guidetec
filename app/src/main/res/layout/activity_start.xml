<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="bottom">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_woman"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-350dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/ic_olmec"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:scaleType="fitStart"
                android:layout_height="120dp"
                android:src="@drawable/ic_yeiya_nombre"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/textGray"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:text="Yeiyá,\nturismo al alcance de tu dispositivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/sbStart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_blue_round"
                android:text="Crear cuenta nueva con correo"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
            <Button
                android:elevation="0dp"
                android:id="@+id/lbStart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_blue_ratio"
                android:text="¿Registrado? Inicia sesión"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue"
                android:textSize="16sp" />
            <Button
                android:elevation="0dp"
                android:drawableStart="@drawable/ic_google"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:id="@+id/gbStart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_blue_google"
                android:text="Entrar con Google"
                android:textAllCaps="false"
                android:textColor="@color/textGray"
                android:textSize="16sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

