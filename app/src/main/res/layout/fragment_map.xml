<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MapFragment"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/header_map"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:text="Lugares"
                android:textColor="@color/darkBlue"
                android:textSize="26dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/search_tasks"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_search_blue"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:src="@drawable/ic_synchronize"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toStartOf="@id/search_tasks"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
        <com.mapbox.mapboxsdk.maps.MapView
            android:layout_below="@id/header_map"
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraZoom="13" />

        <Button
            android:id="@+id/fab_controls_ar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/btn_controlsmap_bg"
            android:layout_marginBottom="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:elevation="6dp"
            android:text="Filtros"
            android:textColor="#636466"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/ic_controls_on"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fb_navigation_vision"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="144dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            android:elevation="6dp"
            android:src="@drawable/ic_vision"
            mapbox:backgroundTint="@color/colorWhite"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fb_navigation_normal"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            android:elevation="6dp"
            android:src="@drawable/ic_navigation_personal"
            mapbox:backgroundTint="@color/colorWhite"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/back_to_camera_tracking_mode"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            android:elevation="6dp"
            android:src="@drawable/ic_gps"
            mapbox:backgroundTint="@color/colorWhite"/>
    </RelativeLayout>
    <include
        layout="@layout/bottom_sheet_controls_ar"
        android:id="@+id/bottom_design"/>


</android.support.design.widget.CoordinatorLayout>