<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guidetec.com.guidetec">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- To check location mapbox -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="guidetec.com.guidetec.myapp.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_yeiya"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="guidetec.com.guidetec.activities.MainActivity" />
        <activity android:name="guidetec.com.guidetec.account.WelcomeActivity" />
        <activity android:name="guidetec.com.guidetec.account.ProfileActivity" />
        <activity android:name="guidetec.com.guidetec.account.SignupActivity" />
        <activity android:name="guidetec.com.guidetec.account.ResetPasswordActivity" />
        <activity android:name="guidetec.com.guidetec.account.LoginActivity" />
        <activity android:name="guidetec.com.guidetec.activities.StartActivity" />
        <activity
            android:name="guidetec.com.guidetec.splashscreen.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="guidetec.com.guidetec.activities.ContactSelect"
            android:theme="@style/AppTheme" />
        <activity android:name="guidetec.com.guidetec.activities.MessageActivity" />
        <activity android:name="guidetec.com.guidetec.activities.GuiboActivity"></activity>
    </application>

</manifest>