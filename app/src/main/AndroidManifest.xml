<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guidetec.com.guidetec">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To check location mapbox -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".myapp.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_guidetec"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".account.WelcomeActivity" />
        <activity android:name=".account.SigninActivity" />
        <activity android:name=".account.ResetPasswordActivity" />
        <activity android:name=".account.LoginActivity" />
        <activity
            android:name=".splashscreen.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ContactSelect"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.MessageActivity" />
        <activity android:name=".activities.GuiboActicity" />
        <activity android:name=".activities.GuiboActivity"></activity>
    </application>

</manifest>